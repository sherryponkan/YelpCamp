<% include ../partials/header%>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To YelpCamp</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a href="/campgrounds/new" class="btn btn-primary btn-large">Add New Campground</a>
            </p>
        </div>
    </header>


    <div class="row text-center" style="display: flex; flex-wrap:wrap;">
        <% for(var i=0;i<campgrounds.length; i++){ %>
            <div class="col-md-4 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campgrounds[i].image %>" alt="">
                    <div class="caption" style="text-align: center;">
                        <h4><%= campgrounds[i].name%></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campgrounds[i]._id%>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }%>
    </div>

</div>



<%include ../partials/footer%>
